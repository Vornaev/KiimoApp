<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_button_height"
        android:background="@drawable/button_cornered_background_orange"
        android:id="@+id/activityRegisterIWantToDeliver"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

    <Button
            android:id="@+id/layout_buttom_custom_image"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="false"
            android:text="I want to deliver"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_button_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/emailImageView"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/image_view_content_description"
            android:src="@drawable/ic_deliver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_buttom_custom_image"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>