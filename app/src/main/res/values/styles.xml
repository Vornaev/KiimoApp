<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item ntrame="android:textColor"></item>-->
    </style>


    <style name="ButtonStyleDefaultOrange">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_cornered_background_orange</item>
        <item name="android:textSize">@dimen/font_size_button_large</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="EditTextPhoneNoBorderStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="EditTextRegisterInputStyles">
        <item name="android:background">@drawable/edit_text_cornered_background_gray</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.PersonalIDStyle" parent="EditTextRegisterInputStyles">
        <item name="android:padding">8dp</item>
    </style>

    <style name="MenuGrayEditFieldsStyle" parent="EditTextRegisterInputStyles">

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="radioButtonsCreateDelivery">
    <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="EditTextRoungGraySmall" parent="EditTextRegisterInputStyles">
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColorHint">@color/mediumLightGray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewPaymentTypeCardTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/quantum_black_text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

</resources>
