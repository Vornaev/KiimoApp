<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_cornered_background_gray"
    android:orientation="vertical"
    android:padding="8dp">

    <com.hbb20.CountryCodePicker
        android:id="@+id/activityRegisterCCpDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        app:ccpDialog_keyboardAutoPopup="true"
        app:ccpDialog_showPhoneCode="true"
        app:ccp_autoDetectCountry="false"
        app:ccp_autoDetectLanguage="false"
        app:ccp_autoFormatNumber="true"
        app:ccp_contentColor="@color/test"
        app:ccp_countryPreference="mk"
        app:ccp_defaultPhoneCode="389"
        app:ccp_showArrow="false"
        app:ccp_showFullName="false"
        app:ccp_showNameCode="false"
        app:ccp_textSize="13.7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneNumberValueEditText"
        style="@style/EditTextPhoneNoBorderStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/enter_your_phone_number"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/activityRegisterCCpDialog"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>