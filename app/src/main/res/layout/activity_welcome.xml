<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteOpc"
        android:fitsSystemWindows="true"
        tools:context=".inital.InitialActivity">


    <ImageView
            android:id="@+id/activityInitialCenterImage"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginStart="@dimen/horizontal_margin_medium"
            android:layout_marginEnd="@dimen/horizontal_margin_medium"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image"
            android:scaleType="fitCenter"
            android:src="@drawable/inital_start"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />


    <ImageView
            android:id="@+id/activityInitalKiimoLogoImage"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginEnd="@dimen/horizontal_margin_medium"
            android:layout_marginBottom="@dimen/vertical_margin_large"
            android:contentDescription="@string/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>